@model IEnumerable<RegistroTipo>

@{
    ViewData["Title"] = Localizer["Formas de participación"];
}

<h3 class="my-5 text-center">@ViewData["Title"]</h3>

@if ((bool)ViewData["RegistroEnabled"])
{
    @if (Model.Count() > 0)
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card @item.ClaseCss text-center h-100">                      
                        <div class="card-body">
                            <h3 class="card-title"><i class="@item.IconoCss"></i></h3>
                            <h5 class="card-text">@Localizer[@item.Nombre]</h5>
                            <p>@Localizer[@item.Descripcion]</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Registro@(item.Id)" class="btn btn-light btn-sm">@Localizer["Iniciar registro"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="mb-4">
            <div class="alert alert-warning" role="alert">
                @Localizer["No se han asignado formas de participación."]
            </div>
        </div>
    }
}
else
{
    <partial name="_PartialRegistroCerrado" />
}