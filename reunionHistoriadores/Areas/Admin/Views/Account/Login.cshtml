@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = Localizer["Inicio de sesión"];
    ViewData["SubTitle"] = "Ingrese sus credenciales";
}

<div class="row h-md-100">
    <!-- First Half -->
    <div class="col-md-6 p-0 bg-login h-md-100 d-md-block d-none"></div>
    <!-- Second Half -->
    <div class="col-md-6 mt-4 mt-md-0 h-md-100">
        <div class="d-md-flex flex-md-column justify-content-center mx-4 h-md-100">
            <h1 class="h3 text-center">@ViewData["SiteTitle"]</h1>
            <h2 class="h5 text-center text-muted">@ViewData["SiteSubTitle"]</h2>
            <partial name="_PartialLogin" />
        </div>
    </div>
</div>

<partial name="_PartialAviso" />

@section Styles {
<link rel="stylesheet" href="~/admin/css/account/login.css" asp-append-version="true" />
<partial name="_ValidationStylesPartial" />
}
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}