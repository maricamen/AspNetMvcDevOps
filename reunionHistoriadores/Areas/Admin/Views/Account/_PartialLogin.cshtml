@model reunionhistoriadores2025.Areas.Admin.ViewModels.Account.LoginViewModel

<form asp-action="Login">

    <div class="card mx-auto mt-3" style="max-width: 500px">
        <div class="card-body">
            <h5 class="card-card-title text-center">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control">
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <a class="btn btn-link ps-0 text-decoration-none" data-bs-toggle="modal" data-bs-target="#modalAviso">Ver aviso de privacidad</a>
            <div class="mb-3">
                <div class="form-check">
                    <label asp-for="Declarativa" class="form-label"></label>
                    <input asp-for="Declarativa" class="form-check-input">
                </div>
                <span asp-validation-for="Declarativa" class="text-danger d-block"></span>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </div>
    </div>
</form>