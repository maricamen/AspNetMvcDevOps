    <input type="text" name="buscar" value="@ViewBag.Buscar" class="form-control me-2" placeholder="Buscar por correo o folio..." />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form> *@
<br />
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}
<table class="table table-hover">
    <thead class="table-success">
        <tr>
            <th>#</th>
            <th>Folio</th>
            <th>Título de la ponencia</th>
            <th>Tema</th>
            <th>Expositor</th>
            <th>Correo</th>
            <th>Fecha</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = (Model.PageNumber - 1) * Model.PageSize;
        }
        @foreach (var item in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@item.Folio</td>
                <td>@item.Titulo</td>
                <td>@item.LineaTematica</td>
                <td>@item.ExpositorNombre</td>
                <td>@item.ExpositorCorreo</td>
                <td>@item.Fecha</td>
                <td>
                    <a class="btn btn-outline-success btn-sm"
                       asp-action="Detalles"
                       asp-route-id="@item.Id">
                        Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <small>Total de ponencias: @ViewBag.Total</small>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { filtroRelacion = ViewBag.FiltroRelacion, page }), new PagedListRenderOptions { UlElementClasses = new string[] { "pagination", "justify-content-center", "pagination-sm" }, LiElementClasses = new string[] { "page-item" }, PageClasses = new string[] { "page-link" } })