@model X.PagedList.IPagedList<reunionhistoriadores2025.Areas.Admin.ViewModels.Ponencias.PonenciaListadoViewModel>
@using X.PagedList.Mvc.Core; 
@using X.PagedList.Web.Common; 

@{
    ViewBag.Title = "Listado de Ponencias";
}

<h2>Listado de Ponencias</h2>
<div class="filtro-superior">
    <a asp-action="DescargarZip" class="btn btn-outline-primary">
        Descargar todos los archivos (.zip)
    </a>
    <a asp-action="ExportarExcel" class="btn btn-outline-primary">
        Descargar listado en Excel
    </a>
    <div class="elem-filtro">
        <form method="get" asp-action="Index">
            <select id="filtroRelacion" name="filtroRelacion" class="form-control elem-filtro select-filtro">
                <option value="">Todas</option>
                <option value="Mesas" selected="@(ViewBag.FiltroRelacion == "Mesas")">Con Mesas</option>
                <option value="Simposios" selected="@(ViewBag.FiltroRelacion == "Simposios")">Con Simposios</option>
            </select>
            <button type="submit" class="btn btn-outline-primary btn-sm elem-filtro">Filtrar</button>
        </form>
    </div>
</div>

