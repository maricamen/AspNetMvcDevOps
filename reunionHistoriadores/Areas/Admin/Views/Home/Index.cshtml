@using reunionhistoriadores2025.AuthorizationPolicies
@model IEnumerable<reunionhistoriadores2025.Areas.Admin.ViewModels.Home.IndexViewModel>

@{
    ViewData["Title"] = "Inicio";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="row small mb-3">
    @* @if (User.IsInRole(AdminRolePolicies.AdministradorGeneralRole))
    {
        <div class="col">
            <a class="text-decoration-none" asp-action="Crear" title="@Localizer["Crear nuevo"]">@Localizer["Crear nuevo"]</a>
        </div>
    } *@
    @* <div class="col text-end">
        Mostrando @Model.Count() elementos
    </div> *@
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped small">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    @if (User.IsInRole(AdminRolePolicies.AdministradorGeneralRole))
                    {
                        <th>Acción</th>
                    }
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCierre)
                    </th>
                    @* <th class="text-center">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Total)
                    </th> *@
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-dark text-center">
                            <i class="@item.IconoCss"></i>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        @if (User.IsInRole(AdminRolePolicies.AdministradorGeneralRole))
                        {
                            <td>
                                <a asp-action="Editar" asp-route-id="@item.Id" class="text-decoration-none" title="@Localizer["Clic para editar"]"><i class="bi bi-pencil"></i> @Localizer["Editar"]</a>
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCierre)
                        </td>
                        @* <td class="text-center">
                            <a asp-controller="Registros" asp-action="Index" asp-route-id="@item.Id" class="text-decoration-none" title="@Localizer["Clic para ver"]">
                                <div class="progress">
                                    <div class="progress-bar small bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">@Html.DisplayFor(modelItem => item.Total)</div>
                                </div>
                            </a> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5 mb-4">
        <div class="alert alert-primary" role="alert">
            <i class="bi bi-info-circle-fill"></i> @Localizer["No se han encontrado elementos"]
        </div>
    </div>
}