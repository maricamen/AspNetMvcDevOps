    <input type="text" name="buscar" value="@ViewBag.Buscar" class="form-control me-2" placeholder="Buscar por correo o folio..." />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form> *@
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}
<table class="table table-hover">
    <thead class="table-success">
        <tr>
            <th>#</th>
            <th>Folio</th>
            <th>Nombre del simposio</th>
            <th>Tema</th>
            <th>Coordinador</th>
            <th>Correo</th>
            <th>Fecha</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = (Model.PageNumber - 1) * Model.PageSize;
        }
        @foreach (var simposio in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@simposio.Regitros.RegistroFolio.Clave</td>
                <td>@simposio.Nombre</td>
                <td>@(simposio.LineaTematica.Nombre)</td>
                <td>@simposio.CoordinadorNombre</td>
                <td>@simposio.CoordinadorCorreo</td>
                <td>@simposio.Regitros.Fecha.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@simposio.Id" class="btn btn-outline-success btn-sm">
                        Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-end">
    <small>Total de simposios: @ViewBag.Total</small>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { UlElementClasses = new string[] { "pagination", "justify-content-center", "pagination-sm" }, LiElementClasses = new string[] { "page-item" }, PageClasses = new string[] { "page-link" } })