@model X.PagedList.IPagedList<reunionhistoriadores2025.Models.Simposio>
@using X.PagedList.Mvc.Core; 
@using X.PagedList.Web.Common; 
@{
    ViewBag.Title = "Listado de simposios";
}
@{
    int contador = 1;
}

<h2>Listado de simposios</h2>
<div class="filtro-superior">
    <a asp-action="DescargarZip" class="btn btn-outline-primary">
        Descargar todos los archivos (.zip)
    </a>
    <a asp-action="ExportarExcel" class="btn btn-outline-primary">
        Descargar listado en Excel
    </a>
</div>
<br />
